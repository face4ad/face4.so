%p#notice= notice
%p
  %b Title:
  = @question.title
%p
  %b Body:
  = @question.body
%p
  %b User:
  = @question.user.name

= form_for(@answer) do |f|
  - if @answer.errors.any?
    .error_explanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited this answer from being saved:
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :answer_body
    %br/
    = f.text_area :body, :rows => 4
  .field
    = f.label :question_id
    (Should be hidden)
    %br/
    = f.number_field :question_id, :value => @question.id
  .actions
    = f.submit

%p Answers 
  

- @question.answers.each do |answer|
  = answer.body
  raised by 
  = answer.user.name
  raised at
  = answer.created_at
  %p Give comment with line number(optional)
  = form_for(Comment.new) do |f|
    .field
      = f.label :body
      %br/
      = f.text_area :body, :rows => 3
    .field
      = f.label :line
      %br/
      = f.text_field :line
    .field
      = f.label :answer_id
      %br/
      = f.hidden_field :answer_id, :value => answer.id
    .actions
      = f.submit "Add comment"

%p 

- if @question.user == current_user
  = link_to 'Edit', edit_question_path(@question)
