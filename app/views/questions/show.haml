%p#notice= notice
%p
  %b Title:
  = @question.title
%p
  %b Body:
  = @question.body
%p
  %b User:
  = @question.user.name

= form_for(@answer) do |f|
  - if @answer.errors.any?
    .error_explanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited this answer from being saved:
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :answer_body
    %br/
    = f.text_area :body
  .field
    = f.label :question_id
    (Should be hidden)
    %br/
    = f.number_field :question_id, :value => @question.id
  .actions
    = f.submit

%p Answers 
  

- @question.answers.each do |answer|
  = answer.body
  raised by 
  = answer.user.name
  raised at
  = answer.created_at
  %p

%p 

- if @question.user == current_user
  = link_to 'Edit', edit_question_path(@question)
