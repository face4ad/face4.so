#login.container_12
  #login_panel
    #login_form
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .row
          = f.label :email, '邮箱：', :class=> 'title'
          = f.email_field :email, :class=>'text'
        .row
          = f.label :password, '密码：', :class=> 'title'
          = f.password_field :password, :class=>'text'
        - if devise_mapping.rememberable?
          .row
            %label{:class=> 'title'} &nbsp;
            = f.check_box :remember_me
            = f.label :remember_me, '下次自动登录', :class=>'txt'
        .row
          = f.submit ' ', :class=>'sign_in'
          = link_to ' ', sync_new_path(:type => :sina), :class=>'sign_up'

